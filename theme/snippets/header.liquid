<header>
  <div class="w-full h-auto py-10 bg-black flex items-center justify-center hidden">
    <div class="container mx-auto text-center">
      <p class="space-x-2 text-5xl">
        <span class="font-bold text-yellow-400 animate-pulse">Now Delivering</span
        ><span class="font-normal text-white"
          >your favourite meals from <span class="font-medium">La Patisserie</span> and
          <span class="font-medium">Hanabi</span></span
        >
      </p>
    </div>
  </div>

  {% comment %} Header Icons {% endcomment %}
  <nav class="w-full h-auto flex items-center bg-yellow-500">
    <div class="container mx-auto flex items-center justify-between gap-x-10 py-10">
      {% comment %} Legourme Logo {% endcomment %}
      <div class="flex items-center justify-between gap-x-5">
        {% comment %} <i class="fa-solid fa-bars text-4xl"></i> {% endcomment %}
        <img src="{{ 'logo.png' | asset_url }}" class="w-40" alt="Le Gourmet Delicatessen Logo">
      </div>

      {% comment %} Search Bar {% endcomment %}
      <div class="hidden w-full flex">
        {% comment %} Search Input {% endcomment %}
        <input placeholder="Search our store" class="w-full px-3 py-2 rounded-l-md outline-none">

        {% comment %} Search Button {% endcomment %}
        <div class="w-10 h-10 flex items-center justify-center bg-slate-800 rounded-r-md">
          <i class="fa-solid fa-magnifying-glass text-white text-2xl"></i>
        </div>
      </div>

      <div class="flex items-center justify-center gap-x-10 text-7xl">
        {% comment %}
          <i class="fa-solid fa-magnifying-glass"></i>
          <i class="fa-solid fa-user"></i>
        {% endcomment %}

        <i class="absolute z-10 fa-solid fa-bag-shopping"></i>
      </div>

      <div class="w-20 h-20 relative flex items-center justify-center">
        <i class="absolute z-10 fa-solid fa-bag-shopping text-7xl"></i>
        <p class="absolute block w-14 h-14 -right-8 -top-8 rounded-full flex items-center justify-center bg-red-500 z-20 font-bold text-3xl text-white">
          20
        </p>
      </div>
    </div>
  </nav>
</header>
